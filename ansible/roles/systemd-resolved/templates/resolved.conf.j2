[Resolve]
#DNS=1.1.1.1 9.9.9.10 8.8.8.8
#FallbackDNS=1.1.1.1 9.9.9.10 8.8.8.8 2606:4700:4700::1111 2620:fe::10 2001:4860:4860::8888
#Domains=

# This is due to https://github.com/systemd/systemd/issues/9867
# I had this problem with a Hotel WiFi where DNSSEC would fail and
# Systemd then wouldn't resolve any addresses at all
# i.e. the "allow_downgrade" option didn't seem to work
DNSSEC=no

#DNSOverTLS=no

# Both disabled because they conflict with Avahi
MulticastDNS=resolve
LLMNR=resolve

#Cache=yes
#DNSStubListener=yes
#ReadEtcHosts=yes
#ResolveUnicastSingleLabel=no
